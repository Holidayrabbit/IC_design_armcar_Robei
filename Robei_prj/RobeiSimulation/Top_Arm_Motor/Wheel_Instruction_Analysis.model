 <Port Datatype="wire" Height="20" Side="left" Name="cmd_valid" X="-0.0222222" Inout="input" Width="20" Datasize="1" Function="" Y="0.793333" Parent="Wheel_Instruction_Analysis" Color="#6495ed"/>
 <Port Datatype="reg" Height="20" Side="right" Name="data_len" X="0.977778" Inout="output" Width="20" Datasize="4" Function="" Y="0.783333" Parent="Wheel_Instruction_Analysis" Color="#6495ed"/>
